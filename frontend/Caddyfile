:80 {
    root * /site
    try_files {path} /index.html
    file_server

    # Proxy to backend API
    handle /api/* {
        reverse_proxy twohun.railway.internal:80
    }

    # Health check endpoint
    handle /health {
        respond "healthy" 200
    }

    # Headers for SPA
    header {
        Cache-Control "no-cache, no-store, must-revalidate"
        Pragma "no-cache"
        Expires "0"
    }
} 