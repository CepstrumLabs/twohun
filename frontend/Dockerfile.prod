# Build stage
FROM node:16-alpine as build

WORKDIR /app
COPY package*.json ./
COPY . .
RUN npm install
RUN npm run build

# Production stage
FROM caddy:2-alpine

WORKDIR /srv
COPY Caddyfile /etc/caddy/Caddyfile

# Copy the built files from Vite's output
COPY --from=build /app/dist ./dist

RUN chown -R caddy:caddy /srv

EXPOSE ${PORT}

CMD ["caddy", "run", "--config", "/etc/caddy/Caddyfile"]
