# Build stage
FROM node:16-alpine as build

COPY package*.json ./
COPY . .
RUN npm install

RUN npm run build

# Production stage
FROM nginx:alpine

# Copy built files and nginx config
COPY --from=build /build /usr/share/nginx/html
COPY --from=build default.conf /etc/nginx/conf.d/default.conf
COPY --from=build start.sh .

# Copy and make startup script executable
RUN chmod +x ./start.sh

EXPOSE 80

# Use startup script
CMD ["./start.sh"]
